<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article),
      # adding styling to erb code ie classes and ids
      class: 'article_title', id: "article_#{article.id}" %>
      <br />
      <%= article.body %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create Article', new_article_path, class: "new_article" %>
